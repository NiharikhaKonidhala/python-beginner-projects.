print("Bill Split Calculator")

no_of_people = int(input("Enter number of people dining: "))
bill_amount = 155 
tip_amount = 5 
tax = 5
total_amount = bill_amount + tip_amount + tax
amount_each_person_pays = total_amount/no_of_people
splitting_bill_or_no = str(input("Will you be splitting your bill? "))

print(f"Bill amount = {bill_amount}")

print(f"Tip amount = {tip_amount}")

print(f"Total amount(including tax) = {total_amount}")

if splitting_bill_or_no == "Yes":

  print(f"Split Bill = {amount_each_person_pays}")
