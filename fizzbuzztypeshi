print("Welcome to Number Analyzer!")

def even_or_odd(n):
  if n % 2 == 0:
    return "Even"
  else:
    return "Odd"

def fizzbuzz_check(n):
  if n % 3 == 0 and n % 7 ==0:
    return "Fizzbuz"
  elif n % 3 == 0:
    return "Fizz"
  elif n % 7 == 0:
    return "Buzz"
  else:
    return str(n)

count = int(input("How many numbers would you like to analyze for today? "))
for i in range(count):
    num = int(input(f"Enter number {i+1}: "))

    even_or_odd_result = even_or_odd(num)
    
    fizzbuzz_check_result = fizzbuzz_check(num)
    
    print(f"Number {num}: {even_or_odd_result}, {fizzbuzz_check_result}")
